{
  "name": "sysrand",
  "version": "1.0.0",
  "description": "App for making Bizhawk load random games",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "release-this": "build"
  },
  "keywords": [],
  "author": "",
  "license": "Apache 2.0",
  "dependencies": {
    "electron-log": "^3.0.5",
    "electron-unhandled": "^2.2.0",
    "express": "^4.16.4",
    "sqlite": "^3.0.3"
  },
  "devDependencies": {
    "electron": "^5.0.1",
    "electron-builder": "^20.40.2"
  },
  "build": {
    "asar": false,
    "productName": "System Randomizer",
    "appId": "823a93c5-8525-49b1-9e65-0ea30cf8d19e",
    "win": {
      "target": [
        "portable",
        "nsis-web",
        "nsis",
        "zip"
      ],
      "icon": "assets/win.ico"
    },
    "nsis": {
      "oneClick": false,
      "installerIcon": "assets/win.ico",
      "installerHeaderIcon": "assets/win.ico",
      "allowToChangeInstallationDirectory": true
    },
    "nsisWeb": {
      "oneClick": true
    },
    "portable": {
      "unpackDirName": "unpack",
      "artifactName": "System Randomizer.exe"
    },
    "directories": {
      "output": "./_build"
    }
  }
}
